{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}
